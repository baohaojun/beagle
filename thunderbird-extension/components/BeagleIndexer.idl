#include "nsISupports.idl"

interface nsIMsgAccount;
interface nsIMsgFolder;
interface nsIMsgDBHdr;

[scriptable, uuid (a7b17c1b-0346-4c52-b52b-6ee858a10f53)]
interface nsIBeagleIndexer : nsISupports
{
	boolean shouldIndexAccount (in nsIMsgAccount account);
	boolean shouldIndexFolder (in nsIMsgFolder folder);
	boolean shouldIndexHdr (in nsIMsgDBHdr hdr);
	boolean isFolderIndexed (in nsIMsgFolder folder);
	boolean isHdrIndexed (in nsIMsgDBHdr hdr);
	boolean isFolderUserMarked (in nsIMsgFolder folder);
	boolean isHdrUserMarked (in nsIMsgDBHdr hdr);
	void markFolderAsIndexed (in nsIMsgFolder folder);
	void markHdrAsIndexed (in nsIMsgDBHdr hdr);	
	void markFolderAsUserMarked (in nsIMsgFolder folder);
	void markHdrAsUserMarked (in nsIMsgDBHdr hdr);
	void resetFolderUserMarked (in nsIMsgFolder folder);
	void resetHdrUserMarked (in nsIMsgDBHdr hdr);
	void resetFolder (in nsIMsgFolder folder, in boolean userMarked, in boolean recursive, in boolean content);
	void resetHdr (in nsIMsgDBHdr hdr, in boolean userMarked);
	void resetEverything (in boolean userMarked);

	void addToIndex (in nsIMsgDBHdr hdr);
	void dropFolderFromIndex (in nsIMsgFolder folder);
	void dropHdrFromIndex (in nsIMsgDBHdr hdr);
};

